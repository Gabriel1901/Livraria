        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html">ADM Livraria</a>
            </div>
            <!-- Top Menu Items -->
            <ul class="nav navbar-right top-nav">
                {% if (is_granted('ROLE_ADMIN')) %}
              <li><a href="{{ path('painel') }}">Painel</a></li>
            {% endif %}
            <li>
                <a id="menu-produtos" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Produtos<span class="caret"></span></a>
                
                <ul class="dropdown-menu" aria-labelledby="menu-produtos">
                    <li><a href="{{ path('produtos_index') }}">Lista de produtos</a></li>
                    <li><a href="{{ path('genero_index') }}">Lista de generos</a></li>
                </ul>
                
            </li>
            
            <li><a href="{{ path('caixa-index') }}">Caixa</a></li>
                
                
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i>{{ app.user.nome }}<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="#"><i class="fa fa-fw fa-user"></i> Profile</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-fw fa-envelope"></i> Inbox</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-fw fa-gear"></i> Settings</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="{{ logout_path() }}"><i class="fa fa-fw fa-power-off"></i>Sair</a>
                        </li>
                    </ul>
                </li>
            </ul>
            
        </nav>
     
     
   <div class="container"> 
       
        {% block body %}{% endblock %}
    </div>
        {% block javascripts %}{% endblock %}
    </body>
